{
    "type": "object",
    "description": "Grant",
    "properties": {
        "title": {
            "type": "string"
        },
        "agency": {
            "type": "string",
            "description": "Any normalized string."
        },
        "agency_id": {
            "type": "string",
            "description": "Grant ID from funding agency."
        },
        "institution_id": {
            "type": "string",
            "description": "Grant id from local institution."
        },
        "type": {
            "type": "string",
            "enum": ["new", "renewal", "supplement"]
        },
        "start_date": {
            "type": "string",
            "format": "full-date",
            "description": "Award start date in RFC-3339 format (YYYY-MM-DDTHH:mm:ssZ)"
        },
        "update_date": {
            "type": "string",
            "format": "full-date",
            "description": "Award updated date in RFC-3339 format (YYYY-MM-DDTHH:mm:ssZ)"
        },
        "end_date": {
            "type": "string",
            "format": "date-time",
            "description": "Award end date in RFC-3339 format (YYYY-MM-DDTHH:mm:ssZ)"
        },
        "total": {
            "type": "integer",
            "description": "Total amount of grant over performance period (start date - end date)."
        },
        "people": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/person"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "last_modified": {
            "type": "string",
            "format": "date-time",
            "description": "Date information was updated either from funding agency or dumped from institution in in RFC-3339 format (YYYY-MM-DDTHH:mm:ssZ)"
        }
    },
    "definitions": {
        "role": {
            "type": "string",
            "enum": ["PI", "Co-PI", "Key Personnel"]
        },
        "idp_id": {
            "description": "Identity Provided ID",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Name of the Identity Provider"
                },
                "type": {
                    "type": "string",
                    "description": "Name used by idp to refer to identiry (UBITname)"
                },
                "id": {
                    "type": "string",
                    "description": "The actual ID"
                },
                "role": {
                    "$ref": "#/definitions/role"
                }
            },
            "required": [
                "name",
                "type",
                "id",
                "role"
            ]
        },
        "common_id": {
            "description": "Common Identity provided by Name",
            "type": "object",
            "properties": {
                "first_name": {
                    "type": "string"
                },
                "middle_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "role": {
                    "$ref": "#/definitions/role"
                }
            },
            "required": [
                "first_name",
                "last_name",
                "role"
            ]
        },
        "person": {
            "type": "object",
            "oneOf": [
                {"$ref": "#/definitions/idp_id"},
                {"$ref": "#/definitions/common_id"}
            ]
        }
    },
    "required": [
        "title",
        "agency",
        "agency_id",
        "institution_id",
        "type",
        "start_date",
        "end_date",
        "total",
        "people",
        "last_modified"
    ]
}
